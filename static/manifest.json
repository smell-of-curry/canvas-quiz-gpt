{
  "manifest_version": 3,
  "name": "Quiz GPT",
  "version": "0.2.0",
  "description": "Assist with online quizzes by capturing questions and requesting GPT answers. Supports Canvas LMS, WileyPLUS, and more.",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "https://*.instructure.com/*",
    "https://education.wiley.com/*",
    "https://*.wileyplus.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    },
    "default_title": "Quiz GPT"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://*.instructure.com/*",
        "https://education.wiley.com/*",
        "https://*.wileyplus.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/question-idle.svg",
        "assets/question-loading.svg",
        "assets/question-success.svg",
        "assets/question-error.svg",
        "assets/question-timeout.svg"
      ],
      "matches": [
        "https://*.instructure.com/*",
        "https://education.wiley.com/*",
        "https://*.wileyplus.com/*"
      ]
    }
  ]
}
